---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

// Componentes React
import GradientText from '../components/react/GradiantText';
import SplitText from '../components/react/SplitText.jsx';
import RotatingText from '../components/react/RotatingText.jsx';
import DotGrid from '../components/react/DotGrid.jsx';
import ScrollStack from '../components/react/ScrollStack.jsx';
// Importamos el NUEVO Carousel
import Carousel from '../components/react/Carousel.jsx';

// Datos para el Carousel (Iconos de Phosphor)
const carouselItems = [
  {
    icon: "ph-calendar-check",
    title: "Agenda visual",
    desc: "Organiza tus citas visualmente para mejorar tu puntualidad."
  },
  {
    icon: "ph-chart-line-up",
    title: "Reportes Financieros",
    desc: "Visualiza tus ingresos, gastos y rentabilidad mensual con gráficos fáciles de entender."
  }
];

// ... (El resto de tus datos techStack y projects siguen igual) ...
---

<Layout title="ClinicPro - Gestión Médica Inteligente">
  <Navbar />

  <section class="hero position-relative overflow-hidden" id="home" style="min-height: 90vh; padding-top: 100px;">
    <DotGrid client:load />

    <div class="container text-center position-relative">
      <div class="mb-3">
        <h1 class="display-5 display-lg-3 fw-bold text-dark-blue">
          <SplitText text="Tu consultorio," client:load />
        </h1>
        
        <div class="d-flex justify-content-center align-items-center gap-2 display-6 display-lg-4 fw-bold flex-wrap">
          <span>más</span>
          <RotatingText words={["Eficiente", "Organizado", "Rentable"]} client:load />
        </div>
      </div>

      <p class="lead text-muted mx-auto mb-5 mt-4" style="max-width: 700px">
        ClinicPro es la plataforma <GradientText client:load>todo-en-uno</GradientText> diseñada para transformar tu práctica clínica.
      </p>

      <div class="d-flex gap-3 justify-content-center mb-5">
        <a href="https://clinicpro-a1f53.web.app" class="btn btn-primary btn-lg rounded-pill px-5">Comenzar Gratis</a>
      </div>

      <div class="mt-5 mx-auto mb-5" style="max-width: 900px;">
        <div class="ratio ratio-16x9 rounded-4 shadow-lg border overflow-hidden">
          <iframe 
            src="https://www.youtube.com/embed/iGGsOUrEZZk?si=d3uuTUS5TYafq8Ja" 
            title="YouTube video player" 
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
            referrerpolicy="strict-origin-when-cross-origin" 
            allowfullscreen
          ></iframe>
        </div>
      </div>

    </div>
  </section>

  <section class="py-5 bg-white">
    <div class="container">
      <div class="text-center mb-5">
        <h2 class="fw-bold text-dark-blue">Funcionalidades Clave</h2>
      </div>
      
      <Carousel items={carouselItems} interval={3000} client:visible />
      
    </div>
  </section>

  <section id="features" class="bg-light">
    <div class="container pt-5 pb-5">
      <div class="text-center mb-5">
        <h2 class="fw-bold display-5 text-dark-blue">Todo lo que necesitas</h2>
        <p class="text-muted">Desliza hacia abajo para descubrir.</p>
      </div>
      <ScrollStack client:visible />
      <div style="height: 20vh;"></div>
    </div>
  </section>

  <Footer />
</Layout>